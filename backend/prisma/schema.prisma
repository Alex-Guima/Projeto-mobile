generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Dog {
  id        String   @id @default(uuid())
  name      String
  breed     String
  age       Int?
  extraInfo String?
  locatedAt Int
  updatedAt DateTime @updatedAt
  owner     Owner    @relation(fields: [ownerId], references: [id])
  ownerId   String
}

model Owner {
  id              String   @id @default(uuid())
  cpf             String   @unique
  name            String
  email           String?
  address         String
  telephoneNumber String
  paymentMethod   String?
  updatedAt       DateTime @updatedAt
  dogs            Dog[]
}
